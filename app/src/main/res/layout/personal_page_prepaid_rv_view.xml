<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#7effffff"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/prepaid_payTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1231231123" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/prepaid_payTime"
            android:layout_toRightOf="@id/prepaid_payTime"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/m_payOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/prepaid_payUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值人:XXX" />

                <TextView
                    android:id="@+id/prepaid_payCarID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌号:XXX" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/m_payTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/prepaid_payPays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值:XXX" />

                <TextView
                    android:id="@+id/prepaid_payTotals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额:XXX" />

            </LinearLayout>

            <TextView
                android:id="@+id/prepaid_payTimes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="充值时间" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>